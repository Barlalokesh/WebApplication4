@model IEnumerable<Role>

    @using(Html.BeginForm("Index","Role",FormMethod.Get))

   {
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    
        @foreach (var i in Model)
        {
            <tr>
            <td>@i.Id</td>
            <td>@i.Name</td>
            <td>@Html.ActionLink("Add Role", "Create")</td>
            <td>@Html.ActionLink("Edit Role", "Edit")</td>

            <td>@Html.ActionLink("Delete Role", "Delete")</td>
            </tr>
        }
    
</table>
   }